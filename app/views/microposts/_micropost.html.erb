<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, 
    size: Settings.gravatar.gravatar_user_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t("views.micropost.mcp.post") %> <%= time_ago_in_words(micropost.created_at) %> 
      <%= t("views.micropost.mcp.ago") %>
    <% if current_user?(micropost.user) %>
      <%= link_to t(".mc_delete"), micropost, method: :delete,
            data: { confirm:  t(".confirm") } %>
    <% end %>
  </span>
</li>
